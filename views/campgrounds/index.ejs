<%- include ("../partials/header") %> 


  <header class="jumbotron">
    <h1 class="display-3"><i class="fas fa-campground" style="color: rgb(192, 78, 78); font-size: 90%;"></i>Welcome to CampIndia!</h1>
    <p class="lead">View our hand-picked campgrounds from all over India</p>
    <hr class="my-2"><br>
    <div class="row">
      <div class="col-md-6 mb-3">
        <a class="btn btn-info btn-lg" href="/campgrounds/new">Add new Campground <i class="fas fa-plus-circle    "></i></a>
      </div>
      <div class="col-md-6 mb-3 d-flex justify-content-md-end">
      <form action="/campgrounds" method="GET" class="form-inline">
        <input class="form-control mr-sm-2" type="search" name="search" aria-label="Search"
      <% if(search && search.length > 0) { %> value="<%= search %>" <% } %>  placeholder="Search"> 
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i class="fas fa-search"></i></button>
      </form>
      </div>
    </div>
  </header>
  <div class="row text-center">
    <div class="col-md-12">
      <% if(noMatch !== null) {%>
        <h3><%= noMatch %></h3> 
      <% } else if(search && search.length > 0) { %>
        <h3 class="text-left mb-4">Search results for "<%= search %>"</h3>
      <% } %> 
    </div>
    <% locations.forEach((location) => { %>
      <div class="col-sm-6 col-md-4 col-lg-3">
        <div class="card mb-3">
          <img class="card-img-top" src="<%= location.image %>"  alt="Image">
          <div class="card-body p-2">
          <h5 class="card-title"><%= location.name %> </h5>
          <a href="/campgrounds/<%= location._id %>" class = "btn btn-info btn-sm mb-2">More info</a>
          </div>
        </div>
      </div>  
    <% }) %> 
  </div>  

<%- include ("../partials/footer") %> 
