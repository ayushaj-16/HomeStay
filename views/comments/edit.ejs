<%- include ("../partials/header") %> 

<h1 style="text-align: center;" class="mb-4">Edit Comment</h1>
<div class="row">
<div class="col-12 col-sm-8 col-md-6 col-lg-4" style="margin: 0 auto;">
  <form action="/campgrounds/<%= location_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
    <div class="form-group">
      <input class="form-control" type="text" name="comment[text]" placeholder="text" value="<%= comment.text %> ">
    </div>
    <div class="form-group">
      <button class="btn btn-primary btn-lg btn-block">Submit!</button>
    </div>
  </form>
  <a href="/campgrounds/<%= location_id %>">Go back</a>
</div>
</div>
<%- include ("../partials/footer") %> 