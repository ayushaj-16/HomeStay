<%- include ("../partials/header") %> 

<h1 style="text-align: center;" class="mb-4">Add a New Comment to <%= location.name %> </h1>
<div class="row">
<div class="col-12 col-sm-8 col-md-6 col-lg-4" style="margin: 0 auto;">
  <form action="/campgrounds/<%= location._id %>/comments" method="POST">
    <div class="form-group">
      <input class="form-control" type="text" name="comment[text]" placeholder="text" required>
    </div>
    <div class="form-group">
      <button class="btn btn-primary btn-lg btn-block">Submit!</button>
    </div>
  </form>
  <a href="/campgrounds/<%= location._id %>">Go back</a>
</div>
</div>

<%- include ("../partials/footer") %> 