<%- include ("../partials/header") %> 

<h1 style="text-align: center;" class="mb-4">Edit <%= location.name %></h1>
<div class="row">
<div class="col-12 col-sm-8 col-md-6 col-lg-4" style="margin: 0 auto;">
  <form action="/accomodations/<%= location._id %>?_method=PUT" method="POST">
    <div class="form-group">
      <input class="form-control" type="text" name="stay[name]" placeholder="name" value="<%= location.name %> ">
    </div>
    <div class="form-group">
      <input class="form-control" type="number" name="stay[price]" placeholder="price" value="<%= location.price %>" min="99" step="50" required>
    </div>
    <div class="form-group">
    <input class="form-control" type="text" name="stay[image]" placeholder="image url" value="<%= location.image %> ">
    </div>
    <div class="form-group">
      <textarea class="form-control" name="stay[description]" rows="7" placeholder="description"><%= location.description %></textarea>
    </div>
    <div class="form-group">
      <button class="btn btn-primary btn-lg btn-block">Submit!</button>
    </div>
  </form>
  <a href="/accomodations">Go back</a>
</div>
</div>

<%- include ("../partials/footer") %> 