<%- include ("partials/header") %> 

<h1 style="text-align: center;" class="mb-4">Sign Up</h1>
<div class="row">
  <div class="col-12 col-sm-8 col-md-6" style="margin: 0 auto;">
    <form action="/register" method="POST">
      <div class="row">
        <div class="form-group col-6">
          <label for="firstName"><strong> First Name </strong></label>
          <input class="form-control" type="text" name="stay[firstName]" id="name" placeholder="first name" required>
        </div>
        <div class="form-group col-6">
          <label for="lastName"><strong> Last Name </strong></label>
          <input class="form-control" type="text" name="stay[lastName]" id="name" placeholder="last name">
        </div>
      </div>
      <div class="form-group">
        <label for="name"><strong> Username </strong></label>
        <input class="form-control" type="text" name="username" id="name" placeholder="username" required>
      </div>
      <div class="form-group">
        <label for="email"><strong> Email </strong></label>
        <input class="form-control" type="email" name="stay[email]" id="name" placeholder="email" required>
      </div>
      <div class="form-group">
        <label for="pass"><strong> Password</strong></label>
      <input class="form-control" type="password" name="password" id="pass" placeholder="password" required>
      </div>
      <div class="form-group">
        <label for="avatar"><strong> Avatar </strong></label>
        <input class="form-control" type="text" name="stay[avatar]" id="name" placeholder="avatar url">
      </div>
      <div class="form-group">
        <label for="adminCode"><strong>Admin Code <em>(*optional)</em></strong></label>
        <input class="form-control" type="password" name="adminCode" id="pass" placeholder="admin code">
      </div>
      <div class="form-group">
        <label for="bio"><strong>Bio</strong></label> 
        <textarea class="form-control" type="bio" name="stay[bio]" rows="5" placeholder="Write a short description of yourself and what you think about the concept of HomeStay."></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary btn-lg btn-block">Sign Up!</button>
      </div>
    </form>
  </div>
</div>
<%- include ("partials/footer") %> 